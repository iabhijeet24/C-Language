#include <stdio.h>

int main() {
    int x[100], esum = 0, osum = 0, i, n;

    printf("Enter the no. of values: ");
    scanf("%d", &n);

    printf("Enter the values:\n");
    for(i = 0; i < n; i++) {
        scanf("%d", &x[i]);
        if(x[i] % 2 == 0) {
            esum = esum + x[i];
        } else {
            osum = osum + x[i];
        }
    }

    printf("The sum of odd numbers is %d and sum of even numbers is %d\n", osum, esum);

    return 0;
}
