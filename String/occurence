#include <stdio.h>
#include <string.h>
int main() {
    char st [30], ch;
    int i, count=0;

    printf("Enter the string:");
    gets (st);
    
    printf("Enter the character you want to count:");
    scanf("%c", &ch);
    
    for(i=0; i<=strlen[st]; i++)
    {
        if(st[i]==ch){
            count++;
        }
    }
    printf("The character has occured %d times", count);

    return 0;
}